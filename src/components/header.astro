---
import Icon from "astro-icon";
import me from "@/assets/me.jpg";
import { Image } from "astro:assets";

type Props = {
  back?: string;
};

const { back } = Astro.props;
---

<header
  class="py-6 px-2 mb-10 sticky top-0 backdrop-blur-lg z-10 border-b-2 border-dotted border-default/10 flex items-center justify-between"
>
  <a
    href="/"
    class="flex gap-3 items-center group justify-center lg:justify-start"
  >
    <Image
      src={me}
      width="45"
      height="45"
      alt="an image of me"
      class="rounded-full"
      densities={[1, 1.5, 2]}
    />
    <div
      class="text-4xl lg:text-5xl font-bold tracking-tighter leading-none drop-shadow-md"
    >
      <span class="gradient-text">afreidz</span><span>.codes</span>
    </div>
  </a>
  {
    back && (
      <a href={back}>
        <Icon name="ic:baseline-arrow-back" class="text-default/40 h-8" />
      </a>
    )
  }
</header>
