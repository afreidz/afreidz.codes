---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  type?: "title" | "default";
};

const { as: Tag = "h2", type = "default", ...rest } = Astro.props;
---

<Tag
  {...rest}
  class:list={{
    "mb-6": true,
    "font-bold": true,
    "text-3xl": type == "title",
    "text-xl": type == "default",
    "lg:text-4xl": type === "title",
    "lg:text-2xl": type === "default",
    "text-gradient-100": type === "title",
  }}
>
  <slot />
</Tag>
